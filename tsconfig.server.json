{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist/server",
      "rootDir": "./server/src",
      "forceConsistentCasingInFileNames": true,
      "strict": true,

      // other options
      "esModuleInterop": true
    },
    "include": ["server/src/**/*"]
  }